#:kivy 2.2.1
#:import Factory kivy.factory.Factory

<upload_image_widget>
    id: pic_widget

    GridLayout:
        orientation: "vertical"
        
        Image:
            id: pose_image
            source: root.select_file()


            Button:
                id: exit_button
                size_hint: self.parent.width / 4, self.parent.height / 4
                pos_hint: {'x': self.parent.right, 'y': self.parent.top}
                background_color: 255,255,255,1
                # background_normal: 'icons/file-upload_white.png'
                on_press: root.exit_button()

                Image:
                    id:exit_button_image
                    source: 'icons/exit-icon.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            
            Button:
                id: left_button
                size_hint: self.parent.width / 4, self.parent.height / 4
                pos_hint: {'x': self.parent.right}
                background_color: 255,255,255,1
                # background_normal: 'icons/file-upload_white.png'
                on_press: root.left_button()

                Image:
                    id:left_button_image
                    source: 'icons/button-left.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            
            Button:
                id: right_button
                size_hint: self.parent.width / 4, self.parent.height / 4
                pos_hint: {'x': self.parent.left}
                background_color: 255,255,255,1
                # background_normal: 'icons/file-upload_white.png'
                on_press: root.right_button()

                Image:
                    id:right_button_image
                    source: 'icons/button-right.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y



<upload_layout>

    id: upload_widget
    upload_widget: upload_widget.__self__
    BoxLayout:
        id: layout
        orientation: "vertical"
        size: root.width, root.height
        
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                Color:
                    rgba: 1, 1, 1, 1
        
        padding: 50
        spacing: 20
    
        Label:
            id: upload_label
            text: "Please Upload a Custom Pose!"
            font_size: 32

            color: 0, 0, 0, 1

        
        Button:
            id: upload_button

            size_hint: 0.2, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            background_color: 255,255,255,1
            # background_normal: 'icons/file-upload_white.png'
            on_press: root.select_file()

          
            Image:
                id:button_image
                source: 'icons/file-upload_white.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size_int: 0.1, 0.1
            
            




        
    

        
            
        
        


            



